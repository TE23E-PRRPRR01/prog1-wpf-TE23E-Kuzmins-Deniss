<Window x:Class="AritmitikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmitikApp"
        mc:Ignorable="d"
        Title="AritmetikApp" Height="450" Width="800">
    <StackPanel Margin="20">
        <!-- Rubrik -->
        <Label Content="Aritmetiken" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Tal 1 -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Tal 1:" Width="100"/>
            <TextBox x:Name="txtTal1" Width="200"/>
        </StackPanel>

        <!-- Operator -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Operator (+, -, *, /):" Width="150"/>
            <TextBox x:Name="txtOperator" Width="200"/>
        </StackPanel>

        <!-- Tal 2 -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Tal 2:" Width="100"/>
            <TextBox x:Name="txtTal2" Width="200"/>
        </StackPanel>

        <!-- Beräkna-knapp -->
        <Button x:Name="btnBerakna" Content="Beräkna" Width="150" Height="30" HorizontalAlignment="Left" Click="btnBerakna_Click"/>

        <!-- Resultat -->
        <Label x:Name="lblResultat" Content="" FontSize="16" FontWeight="Bold" Foreground="Green" Margin="0,20,0,0"/>
    </StackPanel>
</Window>