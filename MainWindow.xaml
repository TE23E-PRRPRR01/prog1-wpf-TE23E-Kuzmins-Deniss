<Window x:Class="prog1_wpf_TE23E_Kuzmins_Deniss.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:prog1_wpf_TE23E_Kuzmins_Deniss"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    SizeToContent="WidthAndHeight"
    MinHeight="300" MinWidth="250">
    <StackPanel Margin="10">
        <Label Margin="10" FontSize="16" FontWeight="bold">Ange en text</Label>
        <TextBox Name="tbxText" Margin="10" Height="100" Width="200" TextWrapping="Wrap"></TextBox>
        <Button Click="KlickOk" Margin="10" Padding="10" Background="LimeGreen" Foreground="White">OK</Button>
        <Button Click="Avbryt" Margin="10" Padding="10" Background="Red" Foreground="White">Avbryt</Button>
    </StackPanel>
</Window>